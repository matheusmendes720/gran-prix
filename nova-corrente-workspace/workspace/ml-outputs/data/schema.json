{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Nova Corrente Forecast Output",
  "description": "Contract for forecast data shared with frontend consumers",
  "type": "object",
  "properties": {
    "ds": {
      "type": "string",
      "format": "date",
      "description": "Date of the forecast"
    },
    "forecast": {
      "type": "number",
      "description": "Point estimate generated by Prophet ensemble"
    },
    "lower": {
      "type": "number",
      "description": "Lower confidence bound"
    },
    "upper": {
      "type": "number",
      "description": "Upper confidence bound"
    },
    "arima_forecast": {
      "type": "number",
      "description": "SARIMAX companion forecast"
    },
    "xgboost_forecast": {
      "type": "number",
      "description": "XGBoost ensemble member forecast"
    },
    "item_id": {
      "type": "integer",
      "description": "Identifier for the inventory item"
    },
    "site_id": {
      "type": "integer",
      "description": "Identifier for the tower/site"
    },
    "region": {
      "type": "string",
      "description": "Regional cluster used for climate joins"
    }
  },
  "required": ["ds", "forecast", "item_id", "site_id"],
  "additionalProperties": false
}

