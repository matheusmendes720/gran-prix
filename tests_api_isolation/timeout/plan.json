{
  "variavel_chave": "timeout",
  "valor_padrao": 30,
  "endpoints": [
    {
      "name": "BACEN Exchange Rate",
      "url": "https://api.bcb.gov.br/dados/serie/bcdata.sgs.1/dados",
      "params": {
        "formato": "json",
        "dataInicial": "01/01/2024",
        "dataFinal": "31/12/2024"
      },
      "methods": ["GET"]
    },
    {
      "name": "BACEN IPCA",
      "url": "https://api.bcb.gov.br/dados/serie/bcdata.sgs.433/dados",
      "params": {
        "formato": "json",
        "dataInicial": "01/01/2024",
        "dataFinal": "31/12/2024"
      },
      "methods": ["GET"]
    },
    {
      "name": "INMET Base",
      "url": "https://apitempo.inmet.gov.br/",
      "methods": ["GET"]
    },
    {
      "name": "ANATEL Website",
      "url": "https://www.gov.br/anatel/",
      "methods": ["GET"]
    },
    {
      "name": "OpenWeather Current",
      "url": "https://api.openweathermap.org/data/2.5/weather",
      "methods": ["GET"]
    },
    {
      "name": "IBGE GDP",
      "url": "https://servicodados.ibge.gov.br/api/v1/economia/pib/v2/29/2024",
      "methods": ["GET"]
    },
    {
      "name": "Health Check",
      "url": "http://localhost:8000/api/v1/health",
      "methods": ["GET"]
    }
  ],
  "variacoes": {
    "timeout": [30, 10, 5, 1, null],
    "retries": [0, 1, 3],
    "concurrency": [1, 5, 20, 100],
    "rate_limit": ["none", "429_retry_after_1s", "429_retry_after_2s"],
    "auth": ["valid", "missing"],
    "network_impairment": ["none", "latency_500ms", "packet_loss_5pct"]
  },
  "checks": [
    "connectivity",
    "schema",
    "rate_limiting",
    "concurrency",
    "payload_extremes",
    "auth_headers",
    "caching_etag",
    "retries_backoff",
    "latency_packet_loss_sim"
  ],
  "tools": {
    "toxiproxy_config": "setup/mock_servers/toxiproxy.json",
    "toxiproxy_scripts": [
      "tools/toxiproxy/start_toxiproxy.sh",
      "tools/toxiproxy/start_toxiproxy.ps1"
    ],
    "k6": "tools/k6/bacen_timeout_smoke.js",
    "locust": "tools/locust/locustfile.py"
  },
  "outputs": {
    "raw": "reports/raw/",
    "summary": "reports/summary/"
  }
}
